<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillAfter="true"
  >

    <!--android:toXDelta="100%" : Lấy độ dài chuyển là nguyên hình -->
    <!--Có thể chọn % hoặc int-->
    <!--Gốc luôn luôn bắt đầu từ 0 , MUốn ngược lại thì dùng số âm-->

    <translate
        android:fromXDelta="0"
        android:toXDelta="500"
        android:duration = "2000">
    </translate>

    <translate
        android:fromYDelta="0"
        android:toYDelta="700"
        android:duration = "2000"
        android:startOffset = "2000"
        ></translate>

    <translate
        android:fromXDelta="0"
        android:toXDelta="-450"
        android:duration = "2000"
        android:startOffset = "4000"></translate>

    <translate android:fromXDelta="0"
        android:toXDelta="450"
        android:fromYDelta="0"
        android:toYDelta="-700"
        android:duration = "2000"
        android:startOffset = "6000"
        ></translate>

    <alpha android:fromAlpha="1"
        android:toAlpha="0"
        android:duration = "8000"></alpha>
</set>