<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.hcmus.tranngocyennhi.animation.MainActivity">

    <ImageView
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:srcCompat="@drawable/sms"
        android:id="@+id/imageViewAvar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <ImageView
        android:layout_weight="3"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/tim"
        android:id="@+id/imageViewScale" />

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/button"
        android:layout_weight="1" />

    <ImageView
        android:layout_gravity="center"
        android:layout_weight="3"
        android:layout_width="200dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/chuong"
        android:id="@+id/imageViewRotate" />
</LinearLayout>
